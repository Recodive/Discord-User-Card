{
	"name": "@discord-user-card/monorepo",
	"type": "module",
	"version": "0.0.9",
	"private": true,
	"packageManager": "pnpm@9.12.1",
	"description": "Monorepo containing the Discord-User-Card's codebase",
	"license": "MPL-2.0",
	"engines": {
		"node": "^20.0.0"
	},
	"scripts": {
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"build": "pnpm -r build",
		"dev": "pnpm -r dev",
		"test": "vitest --run",
		"test:ui": "vitest --ui",
		"release": "pnpm i && pnpm -r build && bumpp package.json packages/*/package.json --commit --push --tag"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^2.24.1",
		"@commitlint/cli": "^19.3.0",
		"@recodive/configs": "^1.8.4",
		"@types/node": "^22.0.3",
		"@vitest/ui": "^2.0.5",
		"bumpp": "^9.4.2",
		"eslint": "^9.8.0",
		"happy-dom": "^14.12.3",
		"playwright": "^1.45.3",
		"typescript": "^5.5.4",
		"vitest": "^2.0.5"
	}
}
